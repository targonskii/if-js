{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "max-classes-per-file": ["error", 3],
        "no-undef": 0,
        "no-plusplus": 0,
        "no-new-object": 0,
        "no-array-constructor": 0,
        "consistent-return": 0,
        "guard-for-in": 0,
        "no-prototype-builtins": 0,
        "no-shadow": 0,
        "no-restricted-syntax": 0
    }
}
